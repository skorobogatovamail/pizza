generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_URL")
}

model User {
    id        Int      @id @default(autoincrement())
    fullname  String
    email     String
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Product {
    id        Int      @id @default(autoincrement())
    name      String
    imageUrl  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
